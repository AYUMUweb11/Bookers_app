<h1>Books</h1>
<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
  </tr>
 </thead>

<tbody>
<% @books.each do |book| %>
<tr>
 <td><%= book.title %></td>
 <td><%= book.body %></td>
 <td class="url"><%= link_to "Show", book_path(book.id) %></td>
 <td class="url"><%= link_to "Edit", edit_book_path(book.id) %></td>
 <td class="url"><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "Are you sure?"} %></td>
</tr>
<% end %>
 </tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
 <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>


  <div class="text_label"><%= f.label :Title %></div>
  <div class="text_area"><%= f.text_field :title %></div>



 <div class="text_label"><%= f.label :Body %></div>
 <div class="text_area"><%= f.text_area :body %></div>

 <div class="create-btn">
  <%= f.submit "Create Book" %>
 </div>
<% end %>
